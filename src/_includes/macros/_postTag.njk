{% macro postTag(params) %}
  <div class="flex gap-2">
    {% for tag in params %}
      <span class="inline-flex fill-blue-200 fill-{{ tag.colour }} items-center gap-1 rounded-full bg-{{ tag.colour }} px-2 py-1 text-xs font-semibold text-white-smoke">{{ tag.title }}</span>
    {% endfor %}
  </div>
{% endmacro %}